<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/styles/login_signup.css"/>
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
</head>
<body>
    <video autoplay muted loop id="background-video">
        <source src="/images/Distant_Lights_4K_Motion_Background_Loop.mp4" type="video/mp4">
    </video>

    <section class="form-section">
        <div class="form-container">
            <h2 class="form-title">Log in</h2>
            
            <% if (typeof error !== 'undefined') { %>
                <div class="error-box">
                    <p><%= error %></p>
                </div>
            <% } %>

            <form action="/login" method="POST">
                <div class="input-group">
                    <input type="email" id="email" name="email" placeholder="Email" required />
                </div>
                <div class="input-group">
                    <input type="password" id="password" name="password" placeholder="Password" required minlength="6" autocomplete="off" />
                </div>
                <button type="submit" class="btn" id="login-btn">Login</button>
            </form>

            <div class="form-footer">
                <p>Don't have an account? <a href="/signup">Sign Up</a></p>
                <p><a href="#">Forgot your password?</a></p>
            </div>
        </div>
    </section>
</body>
</html>

