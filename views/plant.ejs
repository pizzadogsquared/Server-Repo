<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Plant Flower</title>
  <link rel="stylesheet" href="/styles/home.css">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
</head>
<body>
  <%- include('partials/navbar') %>
  <div class="home-container">
    <h1>Choose a Spot to Plant Your Flower</h1>
    <p>You're planting: <strong><%= flower.name %></strong></p>
    <img src="<%= flower.image %>" alt="<%= flower.name %>" style="width: 80px; height: auto;">
    <div id="infoBox" class="info-box"></div>

    <form id="plantForm" action="/plant" method="POST">
      <input type="hidden" name="flowerId" value="<%= flower.id %>">
      <input type="hidden" name="spotIndex" id="spotIndexInput" required>
    
      <div class="planting-grid">
        <% for (let i = 0; i < 15; i++) { %>
          <% const existing = plantedFlowers.find(p => p.spot_index === i); %>
          <div 
            class="plant-spot <%= existing ? 'filled' : 'empty' %>" 
            data-index="<%= i %>"
            onclick="selectSpot(<%= i %>, <%= existing ? 'true' : 'false' %>)"
          >
            <%= existing ? 'ðŸŒ¸' : (i + 1) %>
          </div>
        <% } %>
      </div>
      <button class="btn" type="submit" id="plantBtn" disabled>Plant Here</button>
    </form>
  </div>
  <script>
  function selectSpot(index, filled) {
    const infoBox = document.getElementById("infoBox");
    infoBox.style.display = "block";
  
    if (filled) {
      infoBox.textContent = "This spot is already planted. Selecting it will replace the current flower.";
    } else {
      infoBox.textContent = "Nice! You're planting in a new empty spot.";
    }
  
    document.querySelectorAll(".plant-spot").forEach(spot => {
      spot.classList.remove("selected");
    });
  
    const selected = document.querySelector(`.plant-spot[data-index="${index}"]`);
    selected.classList.add("selected");
  
    document.getElementById("spotIndexInput").value = index;
    document.getElementById("plantBtn").disabled = false;
  }
  </script>
</body>
</html>
