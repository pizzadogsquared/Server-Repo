<!DOCTYPE html>
 <html lang="en">
 <head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Mini Games</title>
     <link rel="icon" href="/favicon.ico" type="image/x-icon">
     <script src="/js/phaser.min.js"></script>
     <style>
         body {
             margin: 0;
             font-family: Arial, sans-serif;
             background-color: #f0f8ff;
         }
         .container {
             padding: 2rem;
             text-align: center;
         }
         .games-grid {
             display: flex;
             justify-content: center;
             gap: 2rem;
             flex-wrap: wrap;
         }
         .game-card {
             background-color: #ffffff;
             padding: 1.5rem;
             border-radius: 15px;
             box-shadow: 0 4px 8px rgba(0,0,0,0.2);
             width: 250px;
             transition: transform 0.2s;
         }
         .game-card:hover {
             transform: scale(1.05);
         }
         .play-button {
             margin-top: 1rem;
             padding: 0.5rem 1rem;
             background-color: #4CAF50;
             color: white;
             border: none;
             border-radius: 8px;
             cursor: pointer;
         }
         .play-button:hover {
             background-color: #45a049;
         }
         #renderDiv {
             display: none;
             width: 100%;
             height: calc(100vh - 60px);
             position: relative;
             z-index: 1;
         }
         .locked {
           position: relative;
           opacity: 0.6;
           pointer-events: none;
         }
         
         .locked .overlay {
           position: absolute;
           top: 0;
           left: 0;
           right: 0;
           bottom: 0;
           background-color: rgba(0, 0, 0, 0.6);
           color: white;
           display: flex;
           justify-content: center;
           align-items: center;
           font-size: 1rem;
           border-radius: 15px;
           pointer-events: auto;
         }
         
         .locked:hover .overlay {
           background-color: rgba(0, 0, 0, 0.75);
         }

     </style>
 </head>
 <body>
     <%- include('partials/navbar') %>
     <div class="container" id="menu">
         <h1>üéÆ Choose a Mini Game</h1>
         <div class="games-grid">
             <div class="game-card <%= totalSurveys < 3 ? 'locked' : '' %>">
               <h3>üå∏ Flower Game</h3>
               <p>Collect flowers and increase your score.</p>
               <% if (totalSurveys < 3) { %>
                 <div class="overlay">
                   üîí <br> Take <%= 3 - totalSurveys %> more surveys to unlock
                 </div>
               <% } else { %>
                 <button class="play-button" onclick="startGame('FlowerGame')">Play</button>
               <% } %>
             </div>
             
             <div class="game-card <%= totalSurveys < 9 ? 'locked' : '' %>">
               <h3>üïπÔ∏è Platform Bee</h3>
               <p>Jump across platforms and avoid obstacles.</p>
               <% if (totalSurveys < 9) { %>
                 <div class="overlay">
                   üîí <br> Take <%= 9 - totalSurveys %> more surveys to unlock
                 </div>
               <% } else { %>
                 <button class="play-button" onclick="startGame('PlatformBee')">Play</button>
               <% } %>
             </div>
             
             <div class="game-card <%= totalSurveys < 15 ? 'locked' : '' %>">
               <h3>üßπ Maze Game</h3>
               <p>Find your way out of the maze.</p>
               <% if (totalSurveys < 15) { %>
                 <div class="overlay">
                   üîí <br> Take <%= 15 - totalSurveys %> more surveys to unlock
                 </div>
               <% } else { %>
                 <button class="play-button" onclick="startGame('MazeGame')">Play</button>
               <% } %>
             </div>
         </div>
     </div>
 
     <div id="renderDiv"></div>
 
     <!-- Incluye las clases en orden -->
     <script src="/js/FlowerGame.js"></script>
     <script src="/js/PlatformBee.js"></script>
     <script src="/js/MazeGame.js"></script>
 
     <script>
         let gameInstance;
         function startGame(sceneKey) {
             document.getElementById('menu').style.display = 'none';
             document.getElementById('renderDiv').style.display = 'block';
 
             if (gameInstance) {
                 gameInstance.destroy(true);
             }
 
             const sceneMap = {
                 'FlowerGame': FlowerGame,
                 'PlatformBee': PlatformBee,
                 'MazeGame': MazeGame
             };
 
             const config = {
                 type: Phaser.AUTO,
                 parent: 'renderDiv',
                 scale: {
                     mode: Phaser.Scale.FIT,
                     autoCenter: Phaser.Scale.CENTER_BOTH
                 },
                 width: 800,
                 height: 600,
                 physics: {
                     default: 'arcade',
                     arcade: {
                         debug: false
                     }
                 },
                 scene: sceneMap[sceneKey] // Solo la escena que se va a ejecutar
             };
 
             gameInstance = new Phaser.Game(config);
             gameInstance.scene.start(sceneKey);
         }
     </script>
 </body>
 </html>
