<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Flower Shop</title>
  <link rel="stylesheet" href="/styles/home.css">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
</head>
<body>
  <%- include('partials/navbar') %>
  <div class="home-container">
    <h1>ðŸŒ¼ Flower Shop</h1>
    <p>You have <strong><%= user.coins %></strong> coins.</p>

    <div class="flower-shop-grid">
      <% flowers.forEach(flower => { %>
        <div class="flower-card">
          <img src="<%= flower.image %>" alt="<%= flower.name %>" class="flower-image">
      
          <!-- Lock name & price in fixed box -->
          <div style="min-height: 60px; display: flex; flex-direction: column; justify-content: center;">
            <h3 style="margin: 5px 0;"><%= flower.name %></h3>
            <p style="margin: 0;">Price: <%= flower.price %> coins</p>
          </div>
      
          <!-- Push button to bottom -->
          <div style="margin-top: auto;">
            <% if (user.coins >= flower.price) { %>
              <form action="/buy-flower" method="POST">
                <input type="hidden" name="flowerId" value="<%= flower.id %>">
                <button class="btn" type="submit">Buy & Plant</button>
              </form>
            <% } else { %>
              <p style="color: red;">Not enough coins</p>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>

